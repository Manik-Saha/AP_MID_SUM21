@model Lecture5.Models.Product
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div>
    <form action="/Product/Create" method="post">
        <input class="form-control" type="text" name="Name" value="" placeholder="Name.." />
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        <input class="form-control" type="text" name="Price" value="" placeholder="Price.." />
        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        <input class="form-control" type="text" name="Qty" value="" placeholder="Quantity.." />
        @Html.ValidationMessageFor(model => model.Qty, "", new { @class = "text-danger" })
        <textarea class="form-control" name="Description" placeholder="Description.."></textarea>
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        <br /><input class="btn btn-group" type="submit" name="submit" value="Add" />
    </form>
</div>

